<div class="container" style="width: 40rem;">
    <form method="post">
        <div class="card text-center mb-3 bg-dark">
            <div class="card-body border-secondary mb-3">
                <div class="form-group">
                    <input type="hidden" value="{{ session.id }}" name="id">
                    <input class="form-control" type="username" name="username" value="{{ session.username }}" placeholder="Choisir un identifiant">
                </div>
                <div class="form-group">
                    <input class="form-control" type="lastname" name="lastname" value="{{ session.lastname }}" placeholder="Nom de famille">
                </div>
                <div class="form-group">
                    <input class="form-control" type="firstname" name="firstname" value="{{ session.firstname }}" placeholder="Prénom">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" value="{{ session.email }}" placeholder="E-mail">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="number" value="{{ session.number }}" placeholder="Téléphone">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" value="{{ session.password }}" placeholder="Mot de passe">
                </div>
                <div class="container text-right">
                    <button type="submit" value="submit" class="btn btn-primary btn-md">Modifier</button>
                </div>
            </div>
        </div>
    </form>
</div>
<br/>